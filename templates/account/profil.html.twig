{% extends 'base.html.twig' %}

{% block title %}Modifier votre profil{% endblock %}

{% block body %}

<div class="container">

    <h1 class="text-center my-5">Modification du profil</h1>

    {{ form_start(form) }}
    <div class="row">
        <div class="col">
            <div class="alert alert-light">
                <h2 class="alert-heading">Informations générales</h2>
                <hr>
                {{ form_row(form.firstName) }}
                {{ form_row(form.lastName) }}
                {{ form_row(form.email) }}
                {{ form_row(form.picture) }}
            </div>
        </div>
        <div class="col">
            <div class="col">
                <div class="alert alert-light">
                    <h2 class="alert-heading">Détails</h2>
                    <hr>
                    {{ form_row(form.introduction) }}
                    {{ form_row(form.description) }}
                    <hr>
                    <button type="submit" class="btn btn-primary text-right"><i class="fa fa-check"></i> Modifier
                    </button>
                </div>
            </div>
        </div>

        {{ form_end(form) }}

    </div>
</div>

    {% endblock %}
