{% extends 'base.html.twig' %}

{% block title %}Votre reservation{% endblock %}

{% block body %}

    {% set author = reservation.annonce.author %}
    {% set annonce = reservation.annonce %}

    <div class="container">
        <h1 class="text-center mb-5">Votre réservation n°{{ reservation.id}} </h1>
        
        {% if app.request.query.get('success') %}
            <div class="alert alert-success">
                <h4 class="alert-heading text-center">Félicitations !</h4>
                    <p class="text-center">Votre réservation auprès de <strong><a href="{{ path('user_show',{'slug':author.slug}) }}">{{ author.fullName }}</a></strong>
                    pour l'annonce <strong><a href="{{ path('annonce_show', {'slug':annonce.slug}) }}">{{ annonce.title }}</a></strong> a bien été
                    prise en compte !</p>
            </div>
        {% endif %}

        <div class="row">
            <div class="col">
                <div class="alert alert-light">
                    <h2>Détails</h2>
                    <dl class="row">
                        <dt class="col-md-4">Numéro</dt>
                        <dd class="col-md-8">{{ reservation.id }}</dd>
                        <dt class="col-md-4">Date d'arrivée</dt>
                        <dd class="col-md-8">{{ reservation.startDate | date('d/m/Y') }}</dd>
                        <dt class="col-md-4">Date de départ</dt>
                        <dd class="col-md-8">{{ reservation.endDate | date('d/m/Y') }}</dd>
                        <dt class="col-md-4">Nombre de nuits</dt>
                        <dd class="col-md-8">{{ reservation.duration }}</dd>
                        <dt class="col-md-4">Montant total</dt>
                        <dd class="col-md-8">{{ reservation.amount }} &euro;</dd>
                        <dt class="col-md-4">Commentaire</dt>
                        <dd class="col-md-8">{{ reservation.commentaire }}</dd>
                    </dl>

                    <hr>

                    <h2 class="alert-heading">Votre hôte</h2>
                    <div class="row mb-3">
                        <div class="col-3">
                            <img src="{{ author.picture }}" class="avatar avatar-medium" alt="Photo de {{ author.fullName }}">
                        </div>
                        <div class="col-9">
                            <h4>
                                <a href="{{ path('user_show', {'slug':author.slug}) }}">{{ author.fullName }}</a>
                            </h4>
                            <span class="badge badge-primary">{% if author.annonces | length > 1 %} {{ author.annonces | length }} annonces {% else %}{{ author.annonces | length }} annonce {% endif%} </span>
                        </div>
                    </div>
                    <p>{{ author.description | raw }}</p>
                    <a href="{{ path('user_show', {'slug':author.slug}) }}" class="btn btn-primary">Plus d'informations sur {{ author.firstName }}</a>
                </div>
            </div>
            <div class="col">
                <div class="alert alert-light">
                    <h2 class="alert-heading">Votre lieux d'hébergement</h2>
                        <h4>
                            <a href="{{ path('annonce_show', {'slug':annonce.slug}) }}">{{ annonce.title }}</a>
                        </h4>
                    <img src="{{ annonce.coverImage }}" alt="Image de {{ annonce.title }}" class="img-fluid">
                    {{ annonce.content | raw }}
                    <a href="{{ path('annonce_show',{'slug':annonce.slug}) }}" class="btn btn-primary">Plus d'informations</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
