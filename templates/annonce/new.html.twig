{% extends 'base.html.twig' %}

{% block title %}Nouvelle annonce{% endblock %}

{% form_theme form 'annonce/_collection.html.twig' %}

{% block body %}

    <div class="container">
        <h1 class="my-5">Créer une nouvelle annonce</h1>

        {{ form_start(form) }}
        <div class="row">
            <div class="col">
                <div class="alert alert-light">
                    <h2>Informations générales</h2>
                    <hr>
                    {{ form_row(form.title) }}
                    {{ form_row(form.price) }}
                    {{ form_row(form.rooms) }}
                </div>
                <div class="alert alert-light">
                    <h2>Détails de l'annonce</h2>
                    <hr>
                    {{ form_row(form.introduction) }}
                    {{ form_row(form.content) }}
                </div>
            </div>
            <div class="col">
                <div class="alert alert-light">
                    <h2>Images de l'annonce </h2>
                    <hr>
                    {{ form_row(form.coverImage) }}
                    {{ form_row(form.images) }}
                </div>
            </div>
        </div>

        <div class="alert alert-primary btnStyle">
            <div class="row">
                <div class="col-6 text-center mt-3">
                    <p>Plus qu'un clique !  </p>
                </div>
                <div class="col-6 text-right">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Créer l'annonce</button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}

    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/annonce.js') }}"></script>
{% endblock %}