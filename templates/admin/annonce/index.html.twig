{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5 text-center">Gestion des annonces</h1>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th class="text-center">RÃ©servations</th>
                <th class="text-center">Note</th>
                <th>Action</th>
            </tr>
            </thead>
            
            <tbody>
            {% for annonce in annonces %}
                {% set author = annonce.author %}
            <tr>
                <td>{{ annonce.id }}</td>
                <td>{{ annonce.title }}</td>
                <td><img src="{{ author.picture }}" alt="Photo de {{ author.fullName }}" class="avatar avatar-mini mr-2">{{ author.fullName }}</td>
                <td class="text-center"><span class="badge badge-primary rounded">{{ annonce.reservations | length }}</span></td>
                <td class="text-center"><span class="badge badge-primary rounded">{{ annonce.avgRatings | number_format(1, ',' , ' ' )}}</span></td>
                <td>
                    <a href="" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    <a href="" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
